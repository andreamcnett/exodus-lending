{% extends "base.twig" %}

{% block content %}

<section class="hero">
	<div class="content">
		<h1>{{ post.title }}</h1>
	</div>
</section>
<section class="article">
	<div class="content">
		<p class="blog-author">
			<span>By</span><a href="{{post.author.path}}"> {{ post.author.name }} </a><span>&bull;</span> {{ post.date }}
		</p>
		{{post.content}}
	</div>
</section>
{% endblock %}
