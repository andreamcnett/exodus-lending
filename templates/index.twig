{% extends "base.twig" %}

{% block content %}
	<section class="hero">
		<div class="content">
			<h1>Stories and news from Exodus Lending and the financial industry!</h1>
			<a class="btn-default btn-med" href="/subscribe">Subscribe to Newsletter</a>
		</div>
	</section>
	<section class="posts">
		<div class="content">
			{% include "menu.twig" with {'menu': blog_menu.get_items} %}
			<div class="articles">
				{% for post in posts %}
					{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
				{% endfor %}
			</div>
			{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
		</div>
	</section>
{% endblock %}
