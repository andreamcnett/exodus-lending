{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<header class="header" >
			{% block header %}
				<nav class="nav">
				  <a class="logo" href="/"><img src="{{ site.theme.link }}/templates/images/exodus-lending-logo-blue.svg" alt="Exodus Lending Logo" /></a>
				  {% include "menu.twig" with {'menu': menu.get_items} %}
				  <a class="mobile-nav-icon" href="#"><i class="fas fa-bars"></i></a>
				</nav>
			{% endblock %}
		</header>

		<div class="page">
			{% block content %}
			    {% include 'modules.twig' %}
			{% endblock %}
		</page>

		{% block footer %}
			<footer id="footer">
				<div class="sticky-footer">
			  <div class="content">
			    <a href="#" id="hide-sticky-footer"><i class="fas fa-times-circle"></i></a>
			    <h4>Join Minnesota Attorney General Keith Ellison and Diane Standaert of the Center for Responsible Lending at our 4th annual summer fundraiser on July 16th!</h4>
			    <a class="btn-white btn-med" href="https://www.eventbrite.com/e/dive-deeper-4th-annual-fundraiser-for-exodus-lending-tickets-62931398507?utm_source=eb_email&utm_medium=email&utm_campaign=new_event_email&utm_term=viewmyevent_button" target="_blank">Buy Tickets</a>
			  </div>
			</div>
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
